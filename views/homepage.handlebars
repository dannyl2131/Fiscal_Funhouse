{{!--generates html code for users and generates elements for expenses --}}
{{#each users as |user| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>{{!{{user.name}}</h2>
  </div>
  <div class="col-md-6">
    <h3><a href="mailto:{{!{{user.email}}">{{!{{user.email}}</a></h3>
  </div>
</div>
<button id="logout" class="btn-no-style">Logout</button>
<aside>
  <h2>Your Budget</h2>
</aside>
<div class="row">
  <div class="col-6">
{{/each}}
{{#each expenses.expenses as |expense| }}
<h4 class="expense">{{expense.name}}: ${{expense.cost}}</h4>
{{/each}}
  </div>
  <div class="col-6">
  {{>chart}}
  </div>
</div>



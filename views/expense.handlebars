{{!--html markup for expense form--}}
<h2 class="page-title">Add Expense</h2>
<form class="form expense-form">
  <div class="form-group">
    <label for="expense-name">Expense Name:</label>
    <input class="form-input" type="text" id="expense-name" />
  </div>
  <div class="form-group">
    <label for="expense-amount">Expense Amount:</label>
    <input class="form-input" type="text" id="expense-amount" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Add Expense</button>
  </div>
</form>

<script src="./js/expense.js"></script>
